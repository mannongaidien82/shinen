.card ng-controller="levelsCtrl"
  .card-header
    nav.navbar.navbar-light
      ul.nav.navbar-nav
        li.nav-item.active
          .dropdown
            button.btn.btn-secondary.dropdown-toggle {
              type="button"
              id="dropdownMenu1"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
              }
              | {{ pickedLevel || 'Select your level' }}
            .dropdown-menu aria-labelledby="dropdownMenu1"
              a.dropdown-item {
                href="#"
                ng-repeat="level in levels"
                ng-click="pickLevel( level )"
                ng-class="{ active: level == pickedLevel }"
                }
                | {{ level }}
        li.nav-item
          .btn-group role="group" aria-label="Controls"
            button.btn.btn-secondary ng-click="shuffle()"
              i.fa.fa-random
            button.btn.btn-secondary ng-click="rocketMode = !rocketMode" ng-class="rocketMode && 'active'"
              i.fa.fa-rocket
  ul.list-group.list-group-flush
    li.list-group-item {
      ng-repeat="kanji in kanjis"
      ng-class="{ success: 'list-group-item-success', failed: 'list-group-item-danger', mixed: 'list-group-item-warning' }[ touchedKanjis[ kanji.name ].status ]"
      }
      .row
        .col-md-1
          h2
            span.label.label-default.center-block {
              ng-class="{ success: 'label-success', failed: 'label-danger', mixed: 'label-warning' }[ touchedKanjis[ kanji.name ].status ] || 'label-default'"
              }

              | {{ kanji.name }}
        .col-md-5
          .input-group ng-class="{ failed: 'has-danger', success: 'has-success' }[ touchedKanjis[ kanji.name ].meaning ]"
            input.form-control {
              type="text"
              required=true
              placeholder="Meaning"
              autocomplete="off"
              autocorrect="off"
              autocapitalize="off"
              spellcheck="false"
              on-enter="revealMeaning( kanji )"
              ng-model="meanings[ kanji.name ]"
              ng-disabled="touchedKanjis[ kanji.name ].meaning"
              ng-class="{ failed: 'form-control-danger', success: 'form-control-success' }[ touchedKanjis[ kanji.name ].meaning ]"
              }
            .input-group-btn
              button.btn.btn-secondary {
                data-title="Show answer"
                ng-click="revealMeaning( kanji )"
                ng-disabled="touchedKanjis[ kanji.name ].meaning"
                }
                i.fa.fa-eye
        .col-md-3
          .input-group ng-class="{ failed: 'has-danger', success: 'has-success' }[ touchedKanjis[ kanji.name ].kunyomi ]"
            input.form-control {
              type="text"
              required="true"
              placeholder="Kunyomi reading"
              autocomplete="off"
              autocorrect="off"
              autocapitalize="off"
              spellcheck="false"
              on-enter="revealKunyomi( kanji, false )"
              to-hiragana=true
              ng-change="kunyomiUpdated( kanji )"
              ng-model="kunyomis[ kanji.name ]"
              ng-disabled="touchedKanjis[ kanji.name ].kunyomi"
              ng-class="{ failed: 'form-control-danger', success: 'form-control-success' }[ touchedKanjis[ kanji.name ].kunyomi ]"
              }
            .input-group-btn
              button.btn.btn-secondary {
                data-title="Show answer"
                ng-click="revealKunyomi( kanji, false )"
                ng-disabled="touchedKanjis[ kanji.name ].kunyomi"
                }
                i.fa.fa-eye
        .col-md-3
          .input-group ng-class="{ failed: 'has-danger', success: 'has-success' }[ touchedKanjis[ kanji.name ].onyomi ]"
            input.form-control {
              type="text"
              required="true"
              placeholder="Onyomi reading"
              autocomplete="off"
              autocorrect="off"
              autocapitalize="off"
              spellcheck="false"
              on-enter="revealOnyomi( kanji, false )"
              to-katakana=true
              ng-change="onyomiUpdated( kanji )"
              ng-model="onyomis[ kanji.name ]"
              ng-disabled="touchedKanjis[ kanji.name ].onyomi"
              ng-class="{ failed: 'form-control-danger', success: 'form-control-success' }[ touchedKanjis[ kanji.name ].onyomi ]"
              }
            .input-group-btn
              button.btn.btn-secondary {
                data-title="Show answer"
                ng-click="revealOnyomi( kanji, false )"
                ng-disabled="touchedKanjis[ kanji.name ].onyomi"
                }
                i.fa.fa-eye
  .card-footer
